                    SizedBox(height: 20),
                    Row(
                      mainAxisAlignment: MainAxisAlignment.start,
                      children: <Widget>[
                        Switch(
                          value: _isAutoLogin,
                          onChanged: (bool value) {
                            HapticFeedback.lightImpact();
                            setState(() {
                              _isAutoLogin = value;
                            });
                          },
                          activeColor: Colors.indigoAccent,
                        ),

                        Text(
